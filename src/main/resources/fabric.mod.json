{
	"schemaVersion": 1,
	"id": "cursedaddons",
	"version": "${version}",
	"name": "CursedAddons",
	"description": "Add various enhancements to Minecraft, starting with chat functionality",
	"authors": [
		"CursedAtom"
	],
	"license": "GPL-3.0",
	"icon": "assets/cursedaddons/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"dev.cursedatom.cursedaddons.CursedAddons"
		],
		"client": [
			"dev.cursedatom.cursedaddons.CursedAddonsClient"
		],
		"modmenu": [
			"dev.cursedatom.cursedaddons.modmenu.CursedAddonsModMenuIntegration"
		]
	},
	"mixins": [
		"cursedaddons.mixins.json",
		{
			"config": "cursedaddons.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~26.1-",
		"java": ">=25",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	},
	"contact": {
  		"homepage": "https://github.com/CursedAtom/CursedAddons",
  		"issues": "https://github.com/CursedAtom/CursedAddons/issues"
	},
	"custom": {
		"modmenu": {
			"update_checker": true
		}
	}
}
